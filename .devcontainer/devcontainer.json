{
  "name": "FAIRDatabase Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.13",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": "false"
    },
    "ghcr.io/devcontainers-extra/features/uv:1": {},
    "ghcr.io/devcontainers-extra/features/ruff:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        // AI assistants
        "Anthropic.claude-code",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        // Database
        "Supabase.vscode-supabase-extension",
        "Supabase.postgrestools",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        // Git & GitHub
        "mhutchie.git-graph",
        "GitHub.vscode-pull-request-github",
        "GitHub.vscode-github-actions",
        // Dev environment
        "ms-azuretools.vscode-docker",
        // Configuration files
        "redhat.vscode-yaml",
        "mikestead.dotenv"
      ]
    }
  },

  // Lifecycle scripts
  "postCreateCommand": "bash .devcontainer/post-create.sh",

  // Forward ports (VS Code)
  "forwardPorts": [5000, 54323, 54324],
  "portsAttributes": {
    "5000": {
      "label": "Flask App",
      "onAutoForward": "notify"
    },
    "54323": {
      "label": "Supabase Studio",
      "onAutoForward": "notify"
    },
    "54324": {
      "label": "Mailpit (Email)"
    }
  },

  // Port mapping for Dev Container CLI and DevPod
  "runArgs": [
    "-p", "5000:5000",
    "-p", "54323:54323",
    "-p", "54324:54324"
  ],

  // Minimum host requirements
  "hostRequirements": {
    "cpus": 2,
    "memory": "2gb",
    "storage": "8gb"
  }
}
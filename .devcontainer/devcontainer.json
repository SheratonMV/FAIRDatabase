{
  "name": "FAIRDatabase Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.13",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": "false"
    },
    "ghcr.io/devcontainers-extra/features/uv:1": {},
    "ghcr.io/devcontainers-extra/features/ruff:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        // AI assistants
        "Anthropic.claude-code",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        // Database
        "Supabase.vscode-supabase-extension",
        "Supabase.postgrestools",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        // Git & GitHub
        "mhutchie.git-graph",
        "GitHub.vscode-pull-request-github",
        "GitHub.vscode-github-actions",
        // Dev environment
        "ms-azuretools.vscode-docker",
        // Configuration files
        "redhat.vscode-yaml",
        "mikestead.dotenv",
        "denoland.vscode-deno"
      ],
      "settings": {
        "[typescript]": {
          "editor.defaultFormatter": "denoland.vscode-deno"
        },
        "deno.enablePaths": [
          "supabase/functions"
        ],
        "deno.lint": true,
        "deno.unstable": [
          "bare-node-builtins",
          "byonm",
          "sloppy-imports",
          "unsafe-proto",
          "webgpu",
          "broadcast-channel",
          "worker-options",
          "cron",
          "kv",
          "ffi",
          "fs",
          "http",
          "net"
        ]
      }
    }
  },

  // Lifecycle scripts
  "postCreateCommand": "bash .devcontainer/post-create.sh",

  // Environment variables for Flask application
  "containerEnv": {
    "ENV": "development",
    "SECRET_KEY": "dev-secret-key-change-in-production",
    "UPLOAD_FOLDER": "./uploads",
    "SUPABASE_URL": "http://127.0.0.1:54321",
    "SUPABASE_SERVICE_ROLE_KEY": "sb_secret_N7UND0UgjKTVK-Uodkm0Hg_xSvEMPvz",
    "POSTGRES_HOST": "127.0.0.1",
    "POSTGRES_PORT": "54322",
    "POSTGRES_USER": "postgres",
    "POSTGRES_SECRET": "postgres",
    "POSTGRES_DB_NAME": "postgres"
  },

  // Forward ports
  "forwardPorts": [5000, 54321, 54322, 54323, 54324],
  "portsAttributes": {
    "5000": {
      "label": "Flask Backend"
    },
    "54321": {
      "label": "Supabase API"
    },
    "54322": {
      "label": "PostgreSQL"
    },
    "54323": {
      "label": "Supabase Studio",
      "onAutoForward": "notify"
    },
    "54324": {
      "label": "Mailpit (Email)"
    }
  },

  // Minimum host requirements
  "hostRequirements": {
    "cpus": 2,
    "memory": "2gb",
    "storage": "8gb"
  }
}
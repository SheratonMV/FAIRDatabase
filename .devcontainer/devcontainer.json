{
  "name": "FAIRDatabase Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.13-bookworm",

  "features": {
    "ghcr.io/devcontainers-extra/features/uv:1": {},
    "ghcr.io/devcontainers-extra/features/ruff:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "ms-python.vscode-python-envs",
        "charliermarsh.ruff",
        // AI assistants
        "Anthropic.claude-code",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        // Database
        "Supabase.vscode-supabase-extension",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        // Git & GitHub
        "mhutchie.git-graph",
        "GitHub.vscode-pull-request-github",
        "GitHub.vscode-github-actions",
        // Dev environment
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        // Configuration files
        "redhat.vscode-yaml",
        "mikestead.dotenv",
        "editorconfig.editorconfig",
        // Deno
        "denoland.vscode-deno"
      ],
      "settings": {
        // Python virtual environment (for VS Code IntelliSense only - use 'uv run' for execution)
        "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
        // Disable auto-activation since we use uv run commands
        "python.terminal.activateEnvironment": false,
        // Disable automatic port forwarding completely
        "remote.autoForwardPorts": false,
        "remote.autoForwardPortsSource": "process",
        "remote.restoreForwardedPorts": false,
        // Deno settings
        "deno.enablePaths": [
          "supabase/functions"
        ],
        "deno.lint": true,
        "deno.unstable": [
          "bare-node-builtins",
          "byonm",
          "sloppy-imports",
          "unsafe-proto",
          "webgpu",
          "broadcast-channel",
          "worker-options",
          "cron",
          "kv",
          "ffi",
          "fs",
          "http",
          "net"
        ],
        "[typescript]": {
          "editor.defaultFormatter": "denoland.vscode-deno"
        }
      }
    }
  },

  // Port forwarding strategy:
  // - Disable automatic port detection to avoid unexpected forwards
  // - Explicitly list only the ports we need
  // - Use appropriate onAutoForward behaviors per service
  "forwardPorts": [5000, 54321, 54323, 54324, 54327],
  "portsAttributes": {
    "5000": {
      "label": "Flask development server",
      "onAutoForward": "openBrowser"
    },
    "54323": {
      "label": "Supabase Studio",
      "onAutoForward": "notify"
    },
    "*": {
      "onAutoForward": "ignore"
    }
  },

  // Lifecycle scripts
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",

  "remoteUser": "vscode",

  // Minimum host requirements
  "hostRequirements": {
    "cpus": 2,
    "memory": "2gb",
    "storage": "8gb"
  }
}